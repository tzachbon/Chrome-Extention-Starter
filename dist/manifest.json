{
  "name": "YouTube Liveshare",
  "author": "Tzach Bonfil",
  "version": "1.0.0",
  "description": "Share youtube",
  "icons": {
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["js/popup.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "YouTube Liveshare",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [],
  "content_scripts": [
    {
      "js": ["js/background.js"],
      "matches": ["*://*/*"]
    }
  ]
}
